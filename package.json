{
  "name": "nostrcat-monorepo",
  "version": "0.2.0",
  "private": true,
  "description": "NoStrCat - Decentralized social + chat platform combining Nostr protocol with OP_CAT Layer",
  "workspaces": [
    "packages/*",
    "apps/*",
    "contracts/*"
  ],
  "scripts": {
    "build": "npm run build:contracts && npm run build:chat-core",
    "build:contracts": "npx scrypt-cli compile",
    "build:chat-core": "cd packages/chat-core && npm run build",
    "build:web": "cd packages/nostrcat-web && npm run build",
    "build:all": "npm run build:contracts && npm run build:chat-core && npm run build:web",
    "dev": "cd packages/nostrcat-web && npm run dev",
    "test": "npm run test:contracts && npm run test:chat-core",
    "test:contracts": "mocha --require ts-node/register tests/**/*.test.ts",
    "test:chat-core": "cd packages/chat-core && npm test",
    "deploy": "npx tsx deploy.ts",
    "genprivkey": "npx tsx scripts/genPrivKey.ts",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist artifacts"
  },
  "dependencies": {
    "scrypt-ts": "^1.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.0",
    "eslint": "^8.0.0",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "nostr",
    "bitcoin",
    "opcat",
    "social",
    "decentralized",
    "smart-contracts",
    "scrypt"
  ],
  "author": "NoStrCat Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nostrcat/nostrcat"
  }
}
